<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="false" />

    <TextView
        android:id="@+id/textPitanja"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:text="TekstPitanja" />

    <TextView
        android:id="@+id/kreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textPitanja"
        android:layout_below="@+id/textPitanja"
        android:layout_marginTop="5dp"
        android:text="Kreator" />

    <TextView
        android:id="@+id/tacanOdgovor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textPitanja"
        android:layout_marginTop="5dp"
        android:layout_alignBaseline="@+id/kreator"
        android:text="Tačan odgovor" />

</RelativeLayout>