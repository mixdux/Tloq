<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textPitanja"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/onOfMarker"
        android:text="TekstPitanja" />

    <TextView
        android:id="@+id/kreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textPitanja"
        android:layout_below="@+id/textPitanja"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:text="Kreator" />

    <TextView
        android:id="@+id/tacanOdgovor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/kreator"
        android:layout_alignRight="@+id/textPitanja"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/kreator"
        android:layout_marginLeft="20dp"
        android:gravity="right"
        android:text="TaÄan odgovor"
        android:textAlignment="gravity" />

    <Button
        android:id="@+id/onOfMarker"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/kreator"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:clickable="false" />

</RelativeLayout>